<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="SecretSound.LoadingWindow"
	Title="MainWindow"
	Width="360" Height="120" Background="{x:Null}" Foreground="{x:Null}" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded">
    
	<Grid x:Name="LayoutRoot" Opacity="100" Width="350" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock HorizontalAlignment="Right"  Width="104" Height="28" VerticalAlignment="Bottom"  Foreground="#FFE3BB00" Panel.ZIndex="4" Margin="0,0,-13,-4" >
			<TextBlock.Text>
				Loading...
			</TextBlock.Text>
			<TextBlock.FontSize>
				14
			</TextBlock.FontSize>
		</TextBlock>
		<Rectangle Fill="{DynamicResource IB_WindowLoading}" />
	</Grid>
</Window>
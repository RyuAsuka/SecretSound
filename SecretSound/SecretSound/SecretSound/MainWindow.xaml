<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="SecretSound.MainWindow"
	Width="350" Height="110" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" WindowStartupLocation="CenterScreen" MouseMove="Window_MouseMove">

	<Grid x:Name="LayoutRoot">
		<Rectangle Fill="{DynamicResource IB_WindowMain}" />
		<Button Content="Button" HorizontalAlignment="Right" Height="18" Margin="0,1,4,0" Style="{DynamicResource BT_Close}" VerticalAlignment="Top" Width="18" Cursor="Hand" Name="BT_Close" Click="BT_Close_Click" />
		<Button Content="Button" HorizontalAlignment="Right" Height="18" Margin="0,1,30,0" Style="{DynamicResource BT_Min}" VerticalAlignment="Top" Width="18" Cursor="Hand" Name="BT_Min" Click="BT_Min_Click" />
		<Button Content="Button" HorizontalAlignment="Left" Margin="16,32,0,21" Style="{DynamicResource BT_Deciphering}" Width="125" Cursor="Hand" Name="BT_Deciphering" Click="BT_Deciphering_Click" />
		<Button Content="Button" HorizontalAlignment="Right" Margin="0,32,26,21" Style="{DynamicResource BT_Enciphering}" Width="125" Cursor="Hand" Name="BT_Enciphering" Click="BT_Enciphering_Click" />
	</Grid>
</Window>
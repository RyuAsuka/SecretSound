						<Image x:Name="image1" Source="/SecretSound;component/ImgResource/BT_Enc_Normal.png" Stretch="Fill" Margin="0" Height="32" VerticalAlignment="Bottom"/>
						<Image x:Name="image2" Source="/SecretSound;component/ImgResource/BT_Enc_Doing.png" Stretch="Fill" Margin="0" Height="32" VerticalAlignment="Bottom" Visibility="Hidden"/>
